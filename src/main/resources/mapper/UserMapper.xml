<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flab.daitso.mapper.UserMapper">
    <insert id="save" parameterType="com.flab.daitso.dto.user.UserRegister" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user(userEmail, userPassword, name, phoneNumber, role, registrationDate)
        VALUES (#{userEmail}, #{userPassword}, #{name}, #{phoneNumber}, #{role}, #{registrationDate})
    </insert>

    <insert id="saveAddress">
        INSERT INTO address(userEmail, address)
        VALUES (#{userEmail}, #{address})
    </insert>

    <select id="findByUserEmail" parameterType="String" resultType="com.flab.daitso.dto.user.User">
        SELECT *
        FROM user
        WHERE userEmail = #{userEmail}
    </select>

    <select id="findAddressByEmail" parameterType="String" resultType="String">
        SELECT address
        FROM address
        WHERE userEmail = #{userEmail}
    </select>

    <select id="findByUserEmailAndUserPassword" resultType="com.flab.daitso.dto.user.User">
        SELECT *
        FROM user
        WHERE userEmail = #{userEmail}
        AND userPassword = #{userPassword}
    </select>

    <update id="changePassword">
        update user set
            userPassword = #{userPassword}
        where
            userEmail = #{userEmail}
    </update>

    <insert id="savePaymentOption">
        INSERT INTO paymentoption(userEmail, paymentoption)
        VALUES (#{userEmail}, #{paymentoption})
    </insert>
</mapper>
